{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strict": true,
    "module": "es2015",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "target": "ES2015",
    "jsx": "react",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
